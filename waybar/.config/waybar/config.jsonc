{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right) // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    "height": 30,
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "wlr/taskbar"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "battery",
        "pulseaudio",
        "network",
        "bluetooth",
        "hyprland/language",
        "custom/wlogout",
    ],
    //Modules configuration

    "include": [
		"~/.config/waybar/modules.json"
	]
}
