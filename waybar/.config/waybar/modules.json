{
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}", 
 "format-icons": {
      "active": "",
        "1": "1",
      "2": "2",
      "3": "3",
      "default": ""
    },
        "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
    }
    },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": "0%",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },

  "network": {
    "format-wifi": " {signalStrength}%", 
    "format-ethernet": " 󰈀 ", 
    "tooltip-format": "{}", 
    "format-linked": "{ifname} (No IP) 󰌘",
    "format-disconnected": "󰖪"
  },
  "bluetooth": {
    "format": " {icon} ", 
    "format-icons": {
      "enabled": "󰂰",
      "disabled": "󰂲",
      "connected": "󰂱"
    },
    "tooltip": false,
    "interval": 2,
    "on-click": "blueman-manager"

  },
  "cpu": {
    "interval": 5,
    "format": "\uf4bc  {usage}%",
    "tooltip": true,
    "on-click": "ghostty -e btop" 

  },
  "memory": {
    "format": "  {}%",
    "tooltip": true
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{time}  {icon}",
    "format-icons": ["󰁺", "󰁼", "󰁾", "󰁿", "󰁹"]
  },
"clock": {
    "timezone": "CET",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%m/%d - %H:%M}"
  }, 
    "custom/wlogout": {
    "format": "⏻",
    "tooltip": true,
    "tooltip-format": "left-click - session screen\nRight click - Screenlock",
    "on-click": "wlogout -b 6",
    "on-click-right": "hyprlock"
  },
  "taskbar": {
    "on-click": "activate",
    "tooltip": false,
    "format": "{icon} {workspaces}",
    "group-by": "workspaces"
  },
"hyprland/language": {
  "format": " {}",
  "format-en": "EN",
  "format-cs": "CZ",
},
  "wlr/taskbar": {
    "icon-size": 15,
    "spacing": 17,
    "tooltip": true,
    "on-click": "activate",
    "on-click-right": "close",
    "on-scroll-up": "activate-previous",
    "on-scroll-down": "activate-next"
  }
}
